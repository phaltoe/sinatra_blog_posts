<h1>Edit <%= @post.title %></h1>

<form action="/posts/<%= @post.id %>" method="post">
  <input type="hidden" name="_method" value="PATCH">
  <p>
    <label>Update Post Title</label>
    <input type="text" name="post[title]" value="<%= @post.title %>"/>
  </p>

  <p>
    <label>Author</label>
    <input type="text" name="post[author_name]" value="<%= @post.author.name %>"/>
  </p>

  <p>
    <label>Post Content</label>
    <TEXTAREA NAME="post[content]" value="<%= @post.content %>"></TEXTAREA>
  </p>

  <ul>
    <% @tags.each do |tag| %>
      <li> <input type="checkbox"  name="post[tag_ids][]"  value="<%= tag.id %>"> <%= tag.name %> </li>
    <% end %> 
  </br>
    <li>Other: <input type="text" name="post[tags_to_add_by_name]"></li> 
  </ul>

  </br>
  <input type="submit" value="Update" id="submit" />
</form>
